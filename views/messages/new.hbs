<h2>{{messages.length}} messages</h2>
{{#each messages as |message index|}}
<h3>
  <a href="/messages/{{message.author}}">{{message.author}} for President in {{message.year}}</a>
</h3>
{{/each}}

<h2>Register New Candidates</h2>
<form class="newCandidates" action="/messages" method="post">
  <input type="text" name="message[author]" placeholder="Author">
  <input type="text" name="message[body]" placeholder="Body">
  <input type="submit" value="Register">

</form>
