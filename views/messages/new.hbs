<h2>{{messages.length}} Messages</h2>
{{#each messages as |message index|}}
<h3>
  <a href="/messages/{{message.author}}">{{message.author}} {{message.body}}</a>
</h3>
{{/each}}

<h2> New Message</h2>
<form  action="/messages" method="post">
<input type="text" name="message[author]" placeholder="Author">
<input type="text" name="message[body]" placeholder="Message">
  <input type="submit">
</form>
