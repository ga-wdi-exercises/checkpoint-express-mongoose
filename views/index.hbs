<div class="page-title">
  <h1>Message</h1>
</div>

<a href="/messages/new">Create New Message:</a>

<ol>
  {{#each messages as |message index|}}
    <li><h3><a href="/messages/{{message.id}}">{{message.body}}</a></h3></li>
    <h4>{{message.author}}</h4>
    <small><time>{{message.date}}</time></small>
  {{/each}}
</ol>
