<h1>Messages</h1>
{{#each messages as |message index|}}
<h3>
  {{message.body}}
  {{message.author}}
</h3>
{{/each}}

<h3>{{message.body}}</h3>
<p>{{message.author}}</p>

<h2>Create new message</h2>
<form action="/messages" method="post">
  <input type="text" name="message[body]" placeholder="body">
  <input type="text" name="message[author]" placeholder="author">
  <input type="submit">
</form>
